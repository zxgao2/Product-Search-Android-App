<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0px"
    android:paddingStart="0px"
    android:paddingLeft="0px"
    android:paddingTop="0px"
    android:paddingEnd="0px"
    android:paddingRight="0px"
    android:paddingBottom="0px"
    android:visibility="visible"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/searchbtn"
        android:layout_width="220dp"
        android:layout_height="61dp"
        android:backgroundTint="#673AB7"
        android:onClick="search_click"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="@string/search"
        android:textColor="#F2F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wishlist"
        android:layout_width="236dp"
        android:layout_height="61dp"
        android:layout_marginStart="204dp"
        android:backgroundTint="#673AB7"
        android:onClick="wishlist_click"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="WISH LIST"
        android:textColor="#F2F2F2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/searchpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="-46dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/keyword_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="68dp"
            android:text="Keyword"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/keyword"
            android:layout_width="384dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="92dp"
            android:ems="10"
            android:hint="Enter Keyword"
            android:inputType="textLongMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/error1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="127dp"
            android:text="Please enter mandatory field"
            android:textColor="#F44336"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="91dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="144dp"
            android:text="Category"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="180dp"
            android:entries="@array/spingarr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="83dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="208dp"
            android:text="Condition"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/new1"
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="248dp"
            android:text="New"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/used"
            android:layout_width="107dp"
            android:layout_height="30dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="248dp"
            android:text="Used"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/unspecified"
            android:layout_width="141dp"
            android:layout_height="32dp"
            android:layout_marginStart="252dp"
            android:layout_marginTop="248dp"
            android:text="Unspecified"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="156dp"
            android:layout_height="23dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="288dp"
            android:text="Shipping Options"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="324dp"
            android:text="Local Pickup"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/freeshipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="324dp"
            android:text="Free Shipping"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="190dp"
            android:layout_height="34dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="368dp"
            android:text="Enable Nearby Search"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/nearby"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="364dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/mile"
            android:layout_width="394dp"
            android:layout_height="49dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="390dp"
            android:ems="10"
            android:hint="Miles from"
            android:inputType="textPersonName"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/from"
            android:layout_width="67dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="430dp"
            android:text="From"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="358dp"
            android:layout_height="67dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="450dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:checkedButton="@id/current"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_weight="1" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Current Location"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/zipcode_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="zipcode"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/error2"
            android:layout_width="312dp"
            android:layout_height="22dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="510dp"
            android:layout_weight="1"
            android:text="Please enter mandatory field"
            android:textColor="#F44336"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/search"
            android:layout_width="151dp"
            android:layout_height="50dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="#F44336"
            android:onClick="submit"
            android:text="SEARCH"
            android:textColor="#F2F2F2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/clear"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="#F44336"
            android:onClick="myclear1"
            android:text="CLEAR"
            android:textColor="#F2F2F2"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/shopcar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>